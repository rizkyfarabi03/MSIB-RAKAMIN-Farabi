<div class="container mt-3">
    <div class="row">
      <div class="col-md-6">
        <h2>Form Ubah Data Movie</h2>
        <form
          method="post"
          action="/api/v1/movies/<%= result.id %>?_method=PUT"
          enctype="multipart/form-data"
        >
          <input type="hidden" name="id" value="<%= result.id %>" />
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
              type="text"
              class="form-control"
              id="title"
              name="title"
              required
              value="<%= result.title %>"
            />
          </div>
          <div class="mb-3">
            <label for="genres" class="form-label">Genres</label>
            <input
              type="genres"
              class="form-control"
              id="genres"
              name="genres"
              required
              value="<%= result.genres %>"
            />
          </div>
          <div class="mb-3">
            <label for="year" class="form-label">Year</label>
            <input
              type="text"
              class="form-control"
              id="year"
              name="year"
              required
              value="<%= result.year %>"
            />
          </div>
          <div class="mb-3">
            <label for="photo" class="form-label">Photo</label>
            <input
              type="file"
              class="form-control"
              id="photo"
              name="photo"
              required
              value="<%= result.photo %>"
            />
          </div>
          <button type="submit" class="btn btn-primary">Ubah Data Movie</button>
        </form>
      </div>
    </div>
  </div>