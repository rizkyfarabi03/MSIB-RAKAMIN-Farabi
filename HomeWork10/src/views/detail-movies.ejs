<div class="container mt-3">
    <div class="row">
      <div class="col-md-8">
        <h2>Detail Movie</h2>
        <% if (!result) { %>
        <div class="alert alert-danger fw-bold" role="alert">
          Data movie tidak ada.
          <a href="/contact" class="alert-link fw-normal"
            >&laquo; kembali ke daftar movie</a
          >
        </div>
        <% }else{ %>
        <div class="card" style="width: 18rem">
          <img
            src="http://localhost:3000/<%= result.photo %>"
            class="card-img-top"
            alt="..."
          />
          <div class="card-body">
            <h5 class="card-title"><%= result.title %></h5>
            <p class="card-subtitle"><%= result.genres %></p>
            <p class="card-text"><%= result.year %></p>
            <a
              href="/api/v1/movies/edit/<%= result.id %>"
              class="btn btn-info badge"
              >Ubah</a
            >
            <form
              action="/api/v1/movies/<%= result.id %>?_method=DELETE"
              method="post"
              class="d-inline"
            >
              <input type="hidden" name="nama" value="<%= result.id %>" />
              <button
                type="submit"
                class="btn btn-danger badge"
                onclick="return confirm('Apakah yakin ingin menghapus movie?');"
              >
                Hapus
              </button>
            </form>
            <a href="/api/v1/movies" class="card-link d-block mt-3"
              >&laquo; Kembali ke daftar movies</a
            >
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>